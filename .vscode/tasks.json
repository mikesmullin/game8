{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "sokol-shdc",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "command": "..\\vendor\\sokol-tools-bin\\bin\\win32\\sokol-shdc.exe",
      "args": [
        "-i",
        "..\\${relativeFile}",
        "-o",
        "..\\${relativeFile}.h",
        "-l",
        "hlsl5:glsl430"
      ],
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "group": "build",
      "problemMatcher": "$gcc"
    }
  ]
}