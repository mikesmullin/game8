{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "build",
      "command": "cl.exe",
      "args": [
        // see: https://learn.microsoft.com/en-us/cpp/build/reference/compiler-options-listed-alphabetically?view=msvc-170
        "/nologo",
        "/Zi",
        "/EHsc",
        "/std:c++17",
        // "/MD",
        "/I",
        "../vendor/sokol",
        "..\\*.cpp",
        "/Fe${workspaceFolder}/build/main.exe",
        // see: https://learn.microsoft.com/en-us/cpp/build/reference/linker-options?source=recommendations&view=msvc-170
        "/link",
        "user32.lib",
        "shell32.lib",
        "gdi32.lib",
        "/NODEFAULTLIB:MSVCRT",
      ],
      "options": {
        "cwd": "${workspaceFolder}/build/"
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}